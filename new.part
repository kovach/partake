game:
  +location 1,
  +location 2,
  +location 3,
  ( location X,
    +token Y,
    +located Y -> X,
    +enemy Z,
    +located Z -> X,
    ),
  ~turn,
  .

{token} turn:
  choose 1 (token X, located X -> L1),
  choose 1 (location L2),
  +located X -> L2,
  .

{enemy} turn:
  choose 1 (enemy X, located X -> L),
  choose 1 (location L'),
  +located X -> L',
  .
